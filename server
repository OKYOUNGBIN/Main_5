server {
        server_name bin.bitmania.kr; # managed by Certbot

        location / {
                proxy_pass http://localhost:2002/;

                proxy_set_header X-Forwarded-Proto $scheme;
                proxy_set_header Host $http_host;

                proxy_http_version 1.1;

                # WebSocket proxing
                proxy_set_header Upgrade $http_upgrade;
                proxy_set_header Connection "Upgrade";

                proxy_redirect off;
                proxy_pass_header Server;
                proxy_set_header X-Real-IP $remote_addr;
                proxy_redirect off;
        }

        listen [::]:443 ssl; # managed by Certbot
        listen 443 ssl; # managed by Certbot
        ssl_certificate /etc/letsencrypt/live/bin.bitmania.kr/fullchain.pem; # managed by Certbot
        ssl_certificate_key /etc/letsencrypt/live/bin.bitmania.kr/privkey.pem; # managed by Certbot
        include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
        ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

server {
        if ($host = bin.bitmania.kr) {
                return 301 https://$host$request_uri;
        } # managed by Certbot

        listen 80 ;
        listen [::]:80 ;
        server_name bin.bitmania.kr;
        return 404; # managed by Certbot
}